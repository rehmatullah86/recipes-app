<%= render 'shared/page_title', title: "Showing all Chefs" %>

<div align="center">
<%= will_paginate @chefs %>
  <% @chefs.each do |chef| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4-offset-4">
          <li> <%= link_to gravatar_for(chef), chef_path(chef) %> </li>
          <li class="chef-title"> <%= link_to chef.chefname.capitalize, chef_path(chef) %> </li>
          <li> <small> <%= pluralize(chef.recipes.count, "recipes") if chef.recipes %> </small> </li>
       <%# <li> <%= link_to "Delete this chef", chef_path(chef),  method: :delete,  data: {confirm: "Are you sure you want to delete this chef and all associated recipes?"} %> </li> 
        <% if logged_in? && current_chef.admin? && !chef.admin? %>
        <li><%= link_to 'Delete this Chef', chef_path(chef), data: { "turbo-method": :delete , turbo_confirm: 'Are you sure?'  } %></li>
        <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate @chefs %>
</div>
