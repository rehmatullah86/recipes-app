<%= render 'shared/page_title', title: "Available Ingredients" %>

<div align="center">
<%= will_paginate @chefs %>
  <% @ingredients.each do |ing| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4-offset-4">
          <li class="chef-title"> <%= link_to ing.name.capitalize, ingredient_path(ing) %> </li>
          <li> <small> <%= pluralize(ing.recipes.count, "recipes") if ing.recipes %> </small> </li>
       <%# <li> <%= link_to "Delete this chef", chef_path(chef),  method: :delete,  data: {confirm: "Are you sure you want to delete this chef and all associated recipes?"} %> </li> 
        <% if logged_in? && current_chef.admin?  %>
        <li><%= link_to 'Edit this Ingredient', edit_ingredient_path(ing) %></li>
        <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate @chefs %>
</div>
